{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["nativewind/types"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*", "./assets/*"]
    }
  },
  "include": ["src", "assets", "*.ts", "*.js", "nativewind-env.d.ts"],
  "exclude": ["node_modules"]
}
